<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /*import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');*/
        nav {
            padding-left: 100px !important;
            padding-right: 100px !important;
            background: #d1d0f9;
            font-family: 'Poppins', sans-serif;
        }

        h1 {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%;
            text-align: center;
            transform: translate(-50%, -50%);
            font-size: 50px;
            font-weight: 600;
        }

        button a {
            color: #d1d0f9;
            font-weight: 500;
        }

        nav a.navbar-brand {
            color: #fff;
            font-size: 30px !important;
            font-weight: 500;
        }

        button a:hover {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        @*<a class="navbar-brand" href="#">Hotel Reservation</a>*@
        @Html.ActionLink("Hotel Reservation", "BookingDetails", "Home", new { @class = "navbar-brand" })
        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Logout","Home")'">Logout</button>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
